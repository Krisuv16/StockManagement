@model IEnumerable<StockManagement.Models.SalesModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalesDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CID.ProductDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalesModedID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalesModedID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalesModedID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
