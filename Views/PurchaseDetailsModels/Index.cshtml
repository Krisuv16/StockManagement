@model IEnumerable<StockManagement.Models.PurchaseDetailsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PDID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PID.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PDID.PurchaseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PurchaseDetailID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PurchaseDetailID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PurchaseDetailID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
